<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>server-quota-portlet</portlet-name>
		<display-name>Server Quota Portlet</display-name>
		<portlet-class>org.lsug.quota.server.portlet.ServerQuotaPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/server-quota/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<supported-locale>ca</supported-locale>
		<supported-locale>en</supported-locale>
		<supported-locale>es</supported-locale>
		<supported-locale>eu</supported-locale>
		<supported-locale>gl</supported-locale>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>Server Quota</title>
			<short-title>Server Quota</short-title>
			<keywords>Server Quota</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>sites-quota-portlet</portlet-name>
		<display-name>Sites Quota Portlet</display-name>
		<portlet-class>org.lsug.quota.portlet.SitesQuotaPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/sites-quota/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<supported-locale>ca</supported-locale>
		<supported-locale>en</supported-locale>
		<supported-locale>es</supported-locale>
		<supported-locale>eu</supported-locale>
		<supported-locale>gl</supported-locale>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>Sites Quota</title>
			<short-title>Sites Quota</short-title>
			<keywords>Sites Quota</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>my-quota-portlet</portlet-name>
		<display-name>My Quota</display-name>
		<portlet-class>
			com.liferay.util.bridges.mvc.MVCPortlet
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/my-quota/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>My Quota</title>
			<short-title>NewPortlet</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>